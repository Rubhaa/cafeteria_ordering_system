<section class="contact">

   <div class="row">

      <div class="image">
         <img src="images/contact-img.svg" alt="">
      </div>

      <form action="say" method="post">
         <h3>TELL US SOMETHING!</h3>
         <% customersList.forEach( customer => {%>
            <p><i class="fas fa-user"></i> <span><big><%= customer.name%></big></span></p>
            <p><i class="fas fa-envelope"></i> <span><big><%=customer.c_mail%></big></span></p>   
         <%})%> 
         <input type="number" name="ph" id="ph" required placeholder="Enter your number" max="9999999999" min="0" class="box" onkeypress="if(this.value.length == 10) return false;">
      
         <textarea  id="con" name="con" placeholder="Enter your message" required class="box" cols="30" rows="10" maxlength="500"></textarea>
         <input type="submit" value="Send Message" class="btn" name="send">
      </form>

   </div>

</section>


























