<body>
   
<header class="header">

   <section class="flex">

      <a href="home.html" class="logo">Yum <i class="fas fa-utensils"></i> Food</a>
      <nav class="navbar">
         <a href="home.html">Home</a>
         <a href="about.html">About</a>
         <a href="menu">Menu</a>
         <a href="orders">Orders</a>
         <a href="contact">Contact</a>
      </nav>

      <div class="icons">
         <a href="/searching"><i class="fas fa-search"></i></a>
         <a href="/cart"><i class="fas fa-shopping-cart"></i><span></span></a>
         <div id="user-btn" class="fas fa-user"></div>
         <div id="menu-btn" class="fas fa-bars"></div>
      </div>

      <div class="profile">
         <p class="name"></p>
         <div class="flex">
            <a href="/profile" class="btn">Profile</a>
            <form action="logo" method="post">
               <a href="/logout" class="btn">Logout</a>
               </form>
         </div>
         <p class="account"><a href="login.html">Login</a> or <a href="register.html">Register</a></p>
      </div>

   </section>

</header>

<div class="heading">
   <h3>Shopping Cart</h3>
   <p><a href="home.html">Home </a> <span> / Cart</span></p>
</div>

<section class="products">

   <h1 class="title">Your Cart</h1>

   <div class="cart-total">
     
        
      <p>Grand Total : <span><%=total%></span></p>
      <a href="checkout" class="btn">Place Order</a>
     
      </div>
   </div>

     
      <div class="box-container">
   
         <% items.forEach(function(image) { %>
            <form action="cartbtn" method="post" class="box">
            <a href="cart" class="cat"></a>
        
         <button class="fas fa-times" type="submit" name="delete" onclick="return confirm('delete this item?')"></button>
         <img src="data:image/<%=image.img.contentType%>;base64,
         <%=image.img.data.toString('base64')%>"alt="">
         <div class="name1"><%= image.item_type %></div>
         <div class="name"><%= image.item_name %></div>
         <div class="flex">
            <div class="price"><span>Rs.</span><%= image.price %><span>/-</span></div>
            <input type="hidden" name="sid" id="sid" value="<%=image.item_id%>">
            <div class="name"><%= image.desc %></div>
         </form>
            <form action="edit" method="post" class="box">
            <input type="hidden" name="id" id="id" value="<%=image.item_id%>">
            <input type="hidden" name="price" id="price" value="<%=image.price%>">
            <input type="number" name="qty" class="qty" min="1" max="99" value="1" onkeypress="if(this.value.length == 2) return false;">
            <button type="submit" class="fas fa-edit"></button>
            </form>
         </div>
      
         <% }) %>
         
        
      </div>
      

    
</section>  
<section>
  

   <div class="more-btn">
      <form action="deleteall" method="post" class="box">
      <button class="delete-btn" type="submit" name="delete" onclick="return confirm('delete all from cart?');">Delete All</button>
   </div>

</section>


























